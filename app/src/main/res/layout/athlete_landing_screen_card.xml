<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id = "@+id/LandingScreenCardView"
    android:layout_margin="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            style="@style/CardHeaderStyle"
            android:text=""
            android:id = "@+id/LandingScreenAttributeHeading"
            />
        <TextView
            android:id = "@+id/LandingScreenDataLabel"
            android:text=""
            style="@style/CardContentsStyle"
            />
        <TextView
            android:text=""
            style="@style/CardViewFooterStyle"
            android:id = "@+id/LandingScreeAttributeTwo"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
</LinearLayout>